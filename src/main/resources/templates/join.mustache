<!doctype html>
<html lang="\">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>회원가입</title>
</head>
<body>
<h1>회원 가입</h1>
<br>
<form id="joinForm" action="/join" method="post">
    <label for="memberId">아이디</label>
    <input type="text" name="memberId" id="memberId"><button id="idCheck">아이디 중복 체크</button>
    <br>
    <label for="memberPw">비밀번호</label>
    <input type="text" name="memberPw" id="memberPw" placeholder="영문자+숫자+특수문자 조합"> (8자리 이상)
    <br>
    <label for="memberName">이름</label>
    <input type="text" name="memberName" id="memberName">
    <br>
    <label for="memberGender">성별</label>
    <input type="radio" value="F" name="memberGender" id="female">여
    <input type="radio" value="M" name="memberGender" id="male">남
    <br>
    <label for="memberEmail">이메일</label>
    <input type="text" name="memberEmail" id="memberEmail">
    <br>
    <label for="memberAge">연령대</label>
    <input type="text" name="memberAge" id="memberAge">
    <br>
    <input type="submit" value="회원가입">
    <a href="/">뒤로가기</a>
</form>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>

        //회원 정보 전체 입력 확인
        $("#joinForm input[type='submit']").on("click",function(e){
            var form = document.getElementById("joinForm");

             if(!form.memberId.value){
                alert("아이디를 입력해 주세요");
                return false;
            }
             if(!form.memberPw.value){
                alert("비밀번호를 입력해 주세요");
                return false;
            }

            var pwdChk =/^(?=.*[a-zA=Z])(?=.[!@#$%^*+=-])(?=.*[0-9]).{8,25}$/;

            if(!pwdChk.test(form.memberPw.value)){
                alert("비밀번호는 영문자+숫자+특수문자 조합으로 /n 8~15자리 사용해야 합니다.");
                return false;
            }

             if(!form.memberName.value){
                alert("이름을 입력해 주세요");
                return false;
            }
             if(!form.memberGender.value){
                alert("성별을 선택해 주세요");
                return false;
            }
             if(!form.memberEmail.value){
                alert("이메일을 입력해 주세요");
                return false;
            }
             if(!form.memberAge.value){
                alert("나이를 입력해 주세요");
                return false;
            }

            form.submit();
        });

        // 아이디 중복 체크
        $("#idCheck").click(function(e){
            var memberId = $("#memberId").val();
            console.log(memberId);
            e.preventDefault();

            $.ajax({
                url:'/idCheck',
                type:'POST',
                data:memberId,
                contentType : "application/json; charset=UTF-8",
                success: function(data){
                    console.log(data);
                    if(data == '1'){
                        $("#idCheck").text("사용중인 아이디 입니다.");
                        $("#joinForm").find("input[type='submit']").attr("disabled",true);
                    }else{
                        $("#idCheck").text("사용 가능한 아이디 입니다.");
                        $("#joinForm").find("input[type='submit']").attr("disabled",false);
                    }
                },
                error:function(){
                    console.log("fail");
                }
            });
        });

</script>
</html>